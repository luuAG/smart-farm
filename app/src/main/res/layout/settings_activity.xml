        android:layout_height="0dip"
        android:layout_weight="7">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngưỡng độ ẩm (%)"
            android:textColor="@color/black_gray"
